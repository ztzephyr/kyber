{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build_main", /* 任务名称 */
            "command": "C:\\MinGW\\bin\\gcc.exe", /* 编译器路径 */
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "src/*.c",
                "-o",
                "${workspaceFolder}/build/main" /* 指定生成可执行文件的绝对路径 */
            ],
            "options": {
                "cwd": "${workspaceFolder}" /* 设置当前工作目录 */
            },
            "problemMatcher":["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "默认编译任务"
        }
    ],
    "version": "2.0.0"
}